{
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        },
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    "cSpell.words": [
        "httpx",
        "fastapi",
        "aclient",
        "pydantic",
        "basemodel",
        "aiofiles",
        "orjson",
        "finetuning",
        "huggingface",
        "llamafactory",
        "gradio",
        "sharegpt",
        "inno",
        "nvme",
        "vllm",
        "safetensors",
        "accelbrain"
    ],
    "python.analysis.typeCheckingMode": "off",
}